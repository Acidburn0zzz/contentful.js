{
  "name": "contentful",
  "description": "Client for Contentful's Content Delivery API",
  "homepage": "https://www.contentful.com/developers/documentation/content-delivery-api/",
  "main": "index.js",
  "repository": "git@github.com:contentful/contentful.js.git",
  "author": "Contentful <support@contentful.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && mkdirp dist && babel lib --out-dir dist",
    "clean": "rimraf dist && rimraf coverage",
    "postinstall": "npm run vendor",
    "prepublish": "in-publish && npm run build || not-in-publish",
    "postpublish": "npm run clean",
    "docs:build": "documentation build lib/*.js --shallow --format=html -o docs",
    "docs:preview": "documentation serve lib/*.js --shallow --format=html -o docs",
    "pretest": "standard lib/*.js && standard lib/**/*.js && flow",
    "test": "npm run test:cover && npm run test:integration",
    "test:cover": "BABEL_ENV=test babel-node ./node_modules/istanbul/lib/cli.js cover test/runner",
    "test:only": "BABEL_ENV=test babel-node ./test/runner",
    "test:debug": "BABEL_ENV=test babel-node debug ./test/runner",
    "test:integration": "babel-node ./test/integration/tests.js",
    "vendor": "rimraf vendor && mkdirp vendor && babel node_modules/axios/lib/ --out-dir vendor/",
    "browser-coverage": "npm run test:cover && opener coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "flow-watcher": "watchy -w lib flow"
  },
  "files": [
    "index.js"
  ],
  "dependencies": {
    "babel-runtime": "^6.3.19",
    "contentful-resolve-response": "^0.1.2",
    "lodash": "^4.2.0"
  },
  "devDependencies": {
    "axios": "^0.9.1",
    "babel-cli": "^6.4.5",
    "babel-eslint": "^5.0.0-beta8",
    "babel-plugin-rewire": "^1.0.0-beta-5",
    "babel-plugin-transform-flow-strip-types": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "^1.1.5",
    "documentation": "^4.0.0-beta",
    "flow-bin": "^0.21.0",
    "in-publish": "^2.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mkdirp": "^0.5.1",
    "opener": "^1.4.1",
    "require-all": "^2.0.0",
    "rimraf": "^2.5.1",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.3",
    "standard": "^5.4.1",
    "tape": "^4.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
